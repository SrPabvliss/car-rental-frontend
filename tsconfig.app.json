{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/vite-env.d.ts",
    "src/**/*",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "src/lib",
    "src/router",
    "src/stores",
    "src/shared/**/*"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "lib": ["ES2023", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "Node"
  }
}
